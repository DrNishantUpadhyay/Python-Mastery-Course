# Creating a file and replacing text
with open("practice.txt", "w") as f:
    f.write("Hi everyone, we are learning File IO using Java.\n")
    f.write("I like programming in Java.")

# Replacing 'Java' with 'Python' (Microsoft values versatile language skills)
with open("practice.txt", "r") as f:
    data = f.read()

new_data = data.replace("Java", "Python")

with open("practice.txt", "w") as f:
    f.write(new_data)
print("File updated successfully.")
